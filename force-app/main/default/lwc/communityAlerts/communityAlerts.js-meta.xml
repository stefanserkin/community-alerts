<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Community Alerts</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property 
                name="subtleMode" 
                label="Subtle Mode" 
                type="Boolean" 
                default="false" 
                description="Only an alert icon will be displayed with alerts shown on hover"
            />
            <property 
                name="subtleModeHeader" 
                label="Subtle Mode Popover Header" 
                type="String" 
                default="Alerts" 
                description="The header of the popover when in subtle mode" 
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>